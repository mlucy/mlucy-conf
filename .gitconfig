[core]
	pager = cat
	editor = ect
[merge]
	conflictstyle = diff3
[color]
  ui = auto
[color "branch"]
  current = blue dim reverse
  local = blue dim
  remote = green
[color "diff"]
  whitespace = red reverse
  meta = blue dim bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = blue dim
  changed = green
  untracked = cyan

[user]
	name = Michael Lucy
	email = mlucy@rethinkdb.com

[alias]
  st = status
  ci = commit
  br = branch
  cb = rev-parse --abbrev-ref HEAD
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
[diff]
	algorithm = patience
